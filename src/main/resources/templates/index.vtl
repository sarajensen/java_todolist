<h1>Task List</h1>
#if ($HTMLTasks)
  <ul>
    #foreach ($HTMLTask in $HTMLTasks)
      <li>$HTMLTask.getDescriptionOfTask()</li>
    #end
  </ul>
#else
  <p>No tasks!</p>
#end

<p>Add a new task:</p>

<form action="/tasks" method="post">
  <label for="descriptionOfTask">Task description</label>
  <input type="text" name="descriptionOfTask" id="descriptionOfTask">

  <button type="submit" class="btn btn-default">Add task</button>
</form>
